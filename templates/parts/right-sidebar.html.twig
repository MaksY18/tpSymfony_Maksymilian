<aside class="w-1/5 py-10 px-10 min-w-min border-l border-gray-300 hidden lg:block">
    <!-- Message de bienvenue -->
    <div class="mb-5 text-gray-700 font-medium">
        Bonjour, {{ app.user.username }}
    </div>
    
    <!-- Recherche -->
    <div class="relative items-center content-center flex">
        <span class="text-gray-400 absolute left-4 cursor-pointer" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
        </span>
        <input 
            type="text" 
            aria-label="Recherche dans les films" 
            class="text-xs ring-1 bg-transparent ring-gray-200 dark:ring-zinc-600 focus:ring-red-300 pl-10 pr-5 text-gray-600 py-3 rounded-full w-full outline-none focus:ring-1" 
            placeholder="Recherche..."
        >
    </div>
    
    <!-- Section : Mes films en cours -->
    <div class="mt-10">
        <span class="font-semibold text-gray-700">Mes films en cours</span>
        <ul class="mt-4 text-gray-400 text-xs space-y-3">
            {% for film in films_en_cours %}
                {% include 'parts/movie_card_sidebar.html.twig' with { 'film': film } %}
            {% endfor %}
            <li class="pt-1">
                <a href="#" class="px-5 py-2.5 bg-red-600 hover:bg-red-700 rounded-lg text-center font-medium block text-white">En afficher +</a>
            </li>
        </ul>
    </div>

    <!-- Section : Mes derniers ajouts -->
    <div class="mt-10">
        <span class="font-semibold text-gray-700">Mes derniers ajouts</span>
        <ul class="mt-4 text-gray-400 text-xs space-y-3">
            {% for film in derniers_ajouts %}
                {% include 'parts/movie_card_sidebar.html.twig' with { 'film': film } %}
            {% endfor %}
            <li class="pt-1">
                <a href="#" class="px-5 py-2.5 bg-red-600 hover:bg-red-700 rounded-lg text-center font-medium block text-white">En afficher +</a>
            </li>
        </ul>
    </div>
</aside>
